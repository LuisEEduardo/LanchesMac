@model Lanche

<div class="col-sm-4 col-md-4 col-lg-4">
    <p>
        <img src="@Model.ImagemUrl" alt="Imagem do lanche" class="img-fluid">
    </p>
    <p>
        Preço: @Model.Preco.ToString("C")
    </p>
    <p style="font-size: 15px;">
        <a asp-controller="Lanche" asp-action="Details" asp-route-lancheId="@Model.Id">@Model.Nome</a>
    </p>
    <p>
        Descrição: @Model.DescricaoCurta
    </p>
    <div>
        <p class="button">
            <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra" asp-action="AdicionarItemCarrinhoCompra" asp-route-LancheId="@Model.Id">
                Incluir no carrinho
            </a>
        </p>
    </div>
</div>